
@{
    ViewData["Title"] = "Update";
}
@model Product

<h1>Ürün güncelleme</h1>
<form asp-controller="Product" asp-action="Update" asp-route-productId="@Model.Id" method="post">
    <label>Ürün İsim :</label>


    <input type="text" asp-for="Name" />
    <br />
    <label>Ürün Fiyat :</label>
    <input type="text" asp-for="Price" />
    <br />
    <label>Ürün Stok :</label>
    <input type="text" asp-for="Stock" />
    <br />
    <label>Ürün Renk :</label>
    <input type="text" asp-for="Color" />
    <br />

    <button type="submit">Ürün Güncelle</button>
</form>
